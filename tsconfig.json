{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2016",
    "noEmitOnError": false,
    "removeComments": true,
    "lib": [
      "es5",
      "ES2015",
      "ES2016",
      "dom"
    ],
    "alwaysStrict": true,
    "strict": true,
    "moduleResolution": "node",
    "module": "ES6",
    "plugins": [
      {
        "transform": "ts-auto-mock/transformer",
        "cacheBetweenTests": false
      }
    ]
  },
  "types": [
    "kwin-types"
  ],
  "typedocOptions": {
    "entryPoints": [
      "src/kwinscript"
    ]
  },
  "include": [
    "src/**/*"
  ]
}
